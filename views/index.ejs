<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Pokemons</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
</head>
<body>
    <%
        var mylocation = null;
        locations.forEach(location => {
            if(location.shortname == req.params.location){
                mylocation = location;
            }
        });
    %> 
    <h1><%= req.params.location %></h1>
    <%
        pokemons.forEach(pokemon => {
            switch(pokemon.type){
                case "fire":
                    %><p>Pokemon <%= pokemon.name %> has a chance of <%= 5*(mylocation.fire/100) %> percent to appear</p><%
                    break;
                case "fat":
                    %><p>Pokemon <%= pokemon.name %> has a chance of <%= 5*(mylocation.fat/100) %> percent to appear</p><%
                    break;
                case "electro":
                    %><p>Pokemon <%= pokemon.name %> has a chance of <%= 5*(mylocation.electro/100) %> percent to appear</p><%
                    break;
            }
        });
    %> 

</body>
</html>